alias vi='vim'

alias c='clear'

alias grep='grep --color=always'

alias be='bundle exec'

# run spin server
alias ss='be spin serve -t'

# run specs on spin server like `sp spec`, `sp spec/models/deals.rb`, `sp spec/models/deals.rb:18`, etc.
alias sp='be spin push'

# after pull you most of the time need to run bundle install and migrations, `up` will run them all
alias up="bundle && be rake db:migrate db:test:prepare"

alias ng_server='JRUBY_OPTS="" jruby --ng-server &'
alias ng_rails='jruby --ng script/rails'
alias ng_rspec='JRUBY_OPTS="--ng" rspec'
alias ng_rake='JRUBY_OPTS="--ng" rake'

# Git
alias sh_exclusive_commits='git log $(git symbolic-ref -q HEAD) --not master --pretty=oneline --abbrev-commit --decorate'
alias sh_exclusive_commits_full='git log $(git symbolic-ref -q HEAD) --not master --abbrev-commit --decorate'
alias squash_exclusive_commits='git rebase -i HEAD~`sh_exclusive_commits | wc -l`'

alias vpn-off='networksetup -setsocksfirewallproxystate "Wired" off'
alias vpn-on='networksetup -setsocksfirewallproxy "Wired" localhost 9696 off && ssh -D 9696 leszek@54.74.232.232'
